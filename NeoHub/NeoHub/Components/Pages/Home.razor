@page "/"
@using NeoHub.Services
@using NeoHub.Services.Models
@using DSC.TLink.ITv2.Enumerations
@using DSC.TLink.ITv2.MediatR
@inject IPartitionStatusService PartitionService
@inject IPanelCommandService CommandService
@inject IITv2SessionManager SessionManager
@inject ISessionMonitor SessionMonitor
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@implements IDisposable

<PageTitle>Security Panel Status</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" GutterBottom="true">Security Panel Status</MudText>

    @if (!activeSessions.Any())
    {
        <MudAlert Severity="Severity.Warning" Class="mt-4">
            <MudText>No active panel connections. Waiting for panel to connect...</MudText>
        </MudAlert>
    }
    else
    {
        <MudSelect T="string" Label="Active Session" @bind-Value="selectedSessionId" Class="mb-4">
            @foreach (var sessionId in activeSessions)
            {
                <MudSelectItem T="string" Value="@sessionId">@sessionId</MudSelectItem>
            }
        </MudSelect>

        @if (!string.IsNullOrEmpty(selectedSessionId))
        {
            var session = PartitionService.GetSession(selectedSessionId);

            @if (session == null)
            {
                <MudAlert Severity="Severity.Info" Class="mt-4">
                    <MudText>Waiting for session data...</MudText>
                </MudAlert>
            }
            else
            {
                @if (session.PanelDateTimeNow is DateTime panelTime)
                {
                    <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mb-3">
                        <MudIcon Icon="@Icons.Material.Filled.Schedule" Size="Size.Small" Class="mr-1" Style="vertical-align: middle;" />
                        Panel Time: @panelTime.ToString("F")
                    </MudText>
                }
                <MudText Typo="Typo.h5" Class="mb-3">Partitions</MudText>
                <MudGrid Class="mb-6">
                    @foreach (var (partitionNumber, partition) in session.Partitions.OrderBy(p => p.Key))
                    {
                        <MudItem xs="12" lg="6">
                            <MudCard Elevation="4" Class="mb-4">
                                <MudCardHeader>
                                    <CardHeaderContent>
                                        <MudText Typo="Typo.h5">Partition @partitionNumber</MudText>
                                    </CardHeaderContent>
                                    <CardHeaderActions>
                                        <MudChip T="string" 
                                                 Color="@(partition.IsArmed ? Color.Error : partition.IsReady ? Color.Success : Color.Warning)" 
                                                 Size="Size.Small">
                                            @partition.ArmMode
                                        </MudChip>
                                    </CardHeaderActions>
                                </MudCardHeader>
                                <MudCardContent>
                                    <MudText Typo="Typo.caption" Color="Color.Secondary">
                                        Zones: @session.Zones.Values.Count(z => z.Partitions.Contains(partitionNumber))
                                    </MudText>
                                </MudCardContent>
                                <MudCardActions>
                                    @if (partition.IsArmed)
                                    {
                                        <MudButton Variant="Variant.Filled"
                                                   Color="Color.Success"
                                                   Size="Size.Small"
                                                   StartIcon="@Icons.Material.Filled.LockOpen"
                                                   OnClick="@(() => ShowDisarmDialog(partitionNumber))"
                                                   Disabled="@commandInProgress">
                                            Disarm
                                        </MudButton>
                                    }
                                    else
                                    {
                                        <MudButton Variant="Variant.Filled"
                                                   Color="Color.Error"
                                                   Size="Size.Small"
                                                   StartIcon="@Icons.Material.Filled.Lock"
                                                   OnClick="@(() => ArmPartitionAsync(partitionNumber, ArmingMode.AwayArm))"
                                                   Disabled="@(!partition.IsReady || commandInProgress)">
                                            Away
                                        </MudButton>
                                        <MudButton Variant="Variant.Filled"
                                                   Color="Color.Warning"
                                                   Size="Size.Small"
                                                   StartIcon="@Icons.Material.Filled.Home"
                                                   OnClick="@(() => ArmPartitionAsync(partitionNumber, ArmingMode.StayArm))"
                                                   Disabled="@(!partition.IsReady || commandInProgress)">
                                            Stay
                                        </MudButton>
                                        <MudButton Variant="Variant.Filled"
                                                   Color="Color.Dark"
                                                   Size="Size.Small"
                                                   StartIcon="@Icons.Material.Filled.NightsStay"
                                                   OnClick="@(() => ArmPartitionAsync(partitionNumber, ArmingMode.NightArm))"
                                                   Disabled="@(!partition.IsReady || commandInProgress)">
                                            Night
                                        </MudButton>
                                    }
                                    <MudSpacer />
                                    <MudButton Variant="Variant.Text" 
                                               Color="Color.Primary" 
                                               OnClick="@(() => ShowZoneDetails(partitionNumber))">
                                        View Zones
                                    </MudButton>
                                </MudCardActions>
                            </MudCard>
                        </MudItem>
                    }
                </MudGrid>

                <MudText Typo="Typo.h5" Class="mb-3">All Zones (@session.Zones.Count)</MudText>
                <MudPaper Class="pa-4">
                    <MudGrid Spacing="1">
                        @foreach (var (zoneNumber, zone) in session.Zones.OrderBy(z => z.Key))
                        {
                            <MudItem xs="6" sm="4" md="3" lg="2">
                                <MudTooltip Text="@GetZoneTooltip(zone)">
                                    <MudChip T="string" 
                                             Size="Size.Small" 
                                             Color="@GetZoneColor(zone)"
                                             Variant="@(zone.IsOpen || zone.IsFaulted || zone.IsTampered ? Variant.Filled : Variant.Outlined)">
                                        <MudIcon Icon="@GetZoneIcon(zone)" Size="Size.Small" Class="mr-1" />
                                        Z@zoneNumber
                                    </MudChip>
                                </MudTooltip>
                            </MudItem>
                        }
                    </MudGrid>
                </MudPaper>
            }
        }
    }
</MudContainer>

<MudDialog @bind-Visible="showDisarmDialog">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.LockOpen" Class="mr-2" />
            Disarm Partition @disarmPartition
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="disarmCode"
                      Label="Access Code"
                      InputType="InputType.Password"
                      Immediate="true"
                      Variant="Variant.Outlined"
                      Class="mt-2" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => showDisarmDialog = false)">Cancel</MudButton>
        <MudButton Color="Color.Success"
                   Variant="Variant.Filled"
                   OnClick="DisarmPartitionAsync"
                   Disabled="@(string.IsNullOrEmpty(disarmCode))">
            Disarm
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    private string selectedSessionId = "";
    private List<string> activeSessions = new();
    private bool commandInProgress;
    private string disarmCode = "";
    private byte? disarmPartition;
    private bool showDisarmDialog;
    private Timer? _clockTimer;

    protected override void OnInitialized()
    {
        RefreshSessions();
        SessionMonitor.SessionsChanged += OnSessionsChanged;
        PartitionService.SessionStateChanged += OnStateChanged;
        PartitionService.PartitionStateChanged += OnStateChanged;
        PartitionService.ZoneStateChanged += OnStateChanged;

        _clockTimer = new Timer(_ => InvokeAsync(StateHasChanged), null, TimeSpan.Zero, TimeSpan.FromSeconds(1));
    }

    private void OnSessionsChanged()
    {
        InvokeAsync(() =>
        {
            RefreshSessions();
            StateHasChanged();
        });
    }

    private void OnStateChanged(object? sender, EventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    private void RefreshSessions()
    {
        activeSessions = SessionManager.GetActiveSessions().ToList();
        
        if (string.IsNullOrEmpty(selectedSessionId) || !activeSessions.Contains(selectedSessionId))
            selectedSessionId = activeSessions.FirstOrDefault() ?? "";
    }

    private Color GetZoneColor(ZoneState zone)
    {
        if (zone.IsTampered) return Color.Error;
        if (zone.IsFaulted) return Color.Error;
        if (zone.IsOpen) return Color.Warning;
        if (zone.IsBypassed) return Color.Info;
        return Color.Success;
    }

    private string GetZoneIcon(ZoneState zone)
    {
        if (zone.IsTampered) return Icons.Material.Filled.Error;
        if (zone.IsFaulted) return Icons.Material.Filled.Warning;
        if (zone.IsOpen) return Icons.Material.Filled.LockOpen;
        if (zone.IsBypassed) return Icons.Material.Filled.Block;
        return Icons.Material.Filled.Lock;
    }

    private string GetZoneTooltip(ZoneState zone)
    {
        var status = new List<string>();
        
        if (!string.IsNullOrEmpty(zone.ZoneName))
            status.Add(zone.ZoneName);
        
        status.Add(zone.IsOpen ? "OPEN" : "CLOSED");
        
        if (zone.IsTampered) status.Add("TAMPERED");
        if (zone.IsFaulted) status.Add("FAULTED");
        if (zone.IsBypassed) status.Add("BYPASSED");

        if (zone.Partitions.Any())
            status.Add($"Partitions: {string.Join(",", zone.Partitions)}");
        
        status.Add($"Updated: {zone.LastUpdated.ToLocalTime():HH:mm:ss}");
        
        return string.Join(" | ", status);
    }

    private void ShowZoneDetails(byte partitionNumber)
    {
        Navigation.NavigateTo($"/zones/{selectedSessionId}/{partitionNumber}");
    }

    private async Task ArmPartitionAsync(byte partition, ArmingMode mode)
    {
        if (string.IsNullOrEmpty(selectedSessionId)) return;

        commandInProgress = true;
        StateHasChanged();

        try
        {
            var result = await CommandService.ArmAsync(selectedSessionId, partition, mode);
            if (!result.Success)
                Snackbar.Add($"Arm failed: {result.ErrorMessage}", Severity.Error);
        }
        finally
        {
            commandInProgress = false;
            StateHasChanged();
        }
    }

    private void ShowDisarmDialog(byte partition)
    {
        disarmPartition = partition;
        disarmCode = "";
        showDisarmDialog = true;
    }

    private async Task DisarmPartitionAsync()
    {
        if (string.IsNullOrEmpty(selectedSessionId) || !disarmPartition.HasValue) return;
        if (string.IsNullOrEmpty(disarmCode))
        {
            Snackbar.Add("Access code is required", Severity.Warning);
            return;
        }

        showDisarmDialog = false;
        commandInProgress = true;
        StateHasChanged();

        try
        {
            var result = await CommandService.DisarmAsync(selectedSessionId, disarmPartition.Value, disarmCode);
            if (!result.Success)
                Snackbar.Add($"Disarm failed: {result.ErrorMessage}", Severity.Error);
        }
        finally
        {
            commandInProgress = false;
            disarmCode = "";
            disarmPartition = null;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _clockTimer?.Dispose();
        SessionMonitor.SessionsChanged -= OnSessionsChanged;
        PartitionService.SessionStateChanged -= OnStateChanged;
        PartitionService.PartitionStateChanged -= OnStateChanged;
        PartitionService.ZoneStateChanged -= OnStateChanged;
    }
}